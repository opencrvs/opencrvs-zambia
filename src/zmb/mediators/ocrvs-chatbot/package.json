{
  "name": "@opencrvs/ocrvs-chatbot-mediator",
  "version": "1.0.0-alpha.3.0",
  "description": "Chatbot integration mediator",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node build/dist/src/index.js",
    "test": "jest --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "postbuild": "ef-tspm",
    "build:clean": "rm -rf build",
    "docker:build": "docker build -t opencrvs/ocrvs-ocrvs-chatbot-mediator -f Dockerfile ../../../..",
    "docker:push": "docker push opencrvs/ocrvs-ocrvs-chatbot-mediator"
  },
  "dependencies": {
    "@elastic/elasticsearch": "6",
    "@types/hapi-pino": "^6.3.0",
    "@types/pino": "^5.14.0",
    "app-module-path": "^2.2.0",
    "@hapi/boom": "^7.2.0",
    "@hapi/hapi": "^20.0.1",
    "hapi-auth-jwt2": "10.2.0",
    "hapi-pino": "^6.3.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.1",
    "openhim-mediator-utils": "^0.2.3",
    "pino": "^5.14.0",
    "short-uid": "^0.1.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/fhir": "^0.0.30",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/node-fetch": "^2.3.4",
    "@types/uuid": "^3.4.4",
    "cross-env": "^5.2.0",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "lint-staged": "^7.1.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@ocrvs-chatbot-mediator/(.*)": "<rootDir>/src/$1"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "resolutions": {
    "minimist": "^1.2.2",
    "acorn": "^6.4.1"
  }
}